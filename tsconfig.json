{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,

		/* 추가설정 */
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@api/*": ["./src/api/*"],
			"@config/*": ["./src/config/*"],
			"@assets/*": ["./src/assets/*"],
			"@schemas/*": ["./src/schemas/*"],
			"@utils/*": ["./src/utils/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@components/*": ["./src/components/*"],
			"@pages/*": ["./src/pages/*"],
			"@stores/*": ["./src/stores/*"],
			"@routers/*": ["./src/routers/*"],
			"@layout/*": ["./src/layout/*"]
		},
		"typeRoots": ["./node_modules/@types", "./src/schemas"],
		"outDir": "dist"
	},
	"include": ["src", "src/schemas/global.d.ts", "eslint.config.js"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
